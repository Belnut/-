<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context=".Login">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignParentRight="true"
        android:id="@+id/chk_server" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@id/chk_server"
        android:id="@+id/server_chk_img"/>

    <ImageView
         android:layout_marginRight="5dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_above="@+id/pwd_etext"
        android:layout_toLeftOf="@+id/pwd_etext"
        android:background="@drawable/roundbox"
        android:id="@+id/imageView1"
        android:src="@drawable/ic_action_name" />

 <EditText
       android:id="@+id/id_etext"
       android:layout_width="250dp"
       android:layout_height="45dp"
       android:hint=" ID"
       android:background="@drawable/textbox"
       android:layout_above="@+id/pwd_etext"
       android:inputType="textUri"
       android:layout_alignStart="@+id/pwd_etext" />

 <ImageView
     android:layout_marginRight="5dp"
     android:layout_width="45dp"
     android:layout_height="45dp"
     android:layout_alignTop="@id/pwd_etext"
     android:layout_toLeftOf="@id/pwd_etext"
     android:background="@drawable/roundbox"
     android:id="@+id/imageView2"
     android:src="@android:drawable/ic_lock_lock" />

    <EditText
        android:layout_marginTop="5dp"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:layout_above="@+id/login_btn"
        android:hint=" PassWord"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/textbox"
        android:id="@+id/pwd_etext" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="  로그인"
        android:id="@+id/login_btn"
        android:gravity="left|center"
        android:drawableLeft="@drawable/login_img"
        android:layout_above="@+id/reg_btn"
        android:layout_marginBottom="3dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/textbox"
        android:onClick="onClick"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="  회원가입"
        android:gravity="left|center"
        android:id="@+id/reg_btn"
        android:drawableLeft="@drawable/add_user"
        android:layout_marginBottom="150dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/textbox"
        android:layout_alignStart="@+id/login_btn"
        android:onClick="onClick"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="  아이디찾기"
        android:id="@+id/find_id"
        android:layout_marginBottom="100dp"
        android:gravity="left|center"
        android:drawableLeft="@drawable/find_img"
        android:layout_alignParentBottom="true"
        android:background="@drawable/textbox"
        android:layout_alignStart="@+id/login_btn"
        android:onClick="onClick" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="  비밀번호찾기"
        android:drawableLeft="@drawable/find_img"
        android:id="@+id/find_pwd"
        android:gravity="left|center"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/textbox"
        android:layout_alignStart="@+id/login_btn"
        android:onClick="onClick" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView6"
        android:background="@drawable/logo_icon_black"
        android:layout_below="@+id/chk_server"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
