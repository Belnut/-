<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"

    android:id="@+id/layout"
    android:background="@drawable/xml_border_top_bottom">


    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="10"
        android:id="@+id/oneDay"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_dark"
        android:layout_marginLeft="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oneDay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/preview_schedule_item_tv_1st"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:textSize="8dp"
            android:textColor="#FFFFFF"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            />

        <TextView
            android:id="@+id/preview_schedule_item_tv_2nd"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:textSize="8dp"
            android:textColor="#FFFFFF"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            />

        <TextView
            android:id="@+id/preview_schedule_item_tv_3rd"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:textSize="8dp"
            android:textColor="#FFFFFF"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:id="@+id/over_schadule_count"
            android:visibility="invisible"
            />

    </LinearLayout>

</RelativeLayout>