<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.k.project.ProfileModifyActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/gridLayout"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:text="사용자 이름"
            android:id="@+id/textView3"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:id="@+id/textViewName"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="25dp"
            android:textColor="@color/black" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/gridLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout2"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="90dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="연락처"
            android:id="@+id/textView5"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="30dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:id="@+id/textView7"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="25dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="휴대전화"
            android:id="@+id/textView6"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="25dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:id="@+id/textViewEmail"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="20dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="휴대전화"
            android:id="@+id/textViewPhone"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="25dp"
            android:textColor="@color/black" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/gridLayout2"
        android:layout_alignParentStart="true"
        android:id="@+id/gridLayout3"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원 탈퇴"
            android:id="@+id/textView10"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="더 이상 앱을 이용하지 않을 경우 회원탈퇴를 진행해 주세요."
            android:id="@+id/textView11"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="20dp" />

    </GridLayout>

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="탈퇴"
        android:id="@+id/buttonEsc"
        android:layout_row="2"
        android:layout_column="0"
        android:textSize="20dp"
        android:layout_below="@+id/gridLayout3"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/imageView"
        android:src="@drawable/line2"
        android:layout_above="@+id/gridLayout2"
        android:layout_alignEnd="@+id/buttonEsc" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/imageView3"
        android:layout_above="@+id/gridLayout3"
        android:layout_alignParentStart="true"
        android:src="@drawable/line2"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="변경"
        android:id="@+id/buttonModify"
        android:layout_row="6"
        android:layout_column="10"
        android:textSize="20dp"
        android:layout_above="@+id/gridLayout3"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_marginBottom="20dp" />
</RelativeLayout>
