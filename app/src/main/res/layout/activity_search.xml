<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SearchActivity">

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/imageViewSearch"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/search"
        android:layout_alignBottom="@+id/buttonCancel" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:id="@+id/imageViewLine"
        android:src="@drawable/line"
        android:layout_below="@+id/imageViewSearch"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="취소"
        android:id="@+id/buttonCancel"
        android:layout_alignParentTop="true"
        android:textSize="22dp"
        android:background="#00ff0000"
        android:textColor="#ffe600"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/clearText" />

    <kr.ac.suwon.it402.project.ClearableEditText
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/clearText"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageViewSearch"
        android:layout_above="@+id/imageViewLine" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewSearch"
        android:layout_below="@+id/imageViewLine"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>